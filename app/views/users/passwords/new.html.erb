<h2>Forgot your password?</h2>

<%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-3") do |f| %>
  <%= devise_error_messages! %>

  <%= f.email_field :email, autofocus: true, autocomplete: "email" %>

  <%= f.primary "Send me reset password instructions" %>
<% end %>

<%= render "users/shared/links" %>
