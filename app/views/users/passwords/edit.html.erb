<h2>Change your password</h2>

<%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }, layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-3") do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

  <%= f.password_field :password, label: 'New Passowrd:', autofocus: true, autocomplete: "new-password", help: @minimum_password_length ? "( #{@minimum_password_length} characters minimum)" : "" %>
  <%= f.password_field :password_confirmation, label: 'Confirm New Passowrd:', autocomplete: "off" %>
  <%= f.primary "Change my password" %>

  
<% end %>

<%= render "users/shared/links" %>
